{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@repo/db": ["../../packages/db/src"],
      "@repo/db/*": ["../../packages/db/src/*"]
    }
  },
  "references": [
    { "path": "../../packages/db/" }
  ]
}
